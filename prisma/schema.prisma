generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model IdeaTopic {
  id          String   @id @default(uuid())
  name        String
  description String
  tags        String[]
  ideas       Idea[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Idea {
  id          String    @id @default(uuid())
  name        String
  description String
  tags        String[]
  rating      Int       @default(0)
  feedback    String?
  ideaTopicId String
  ideaTopic   IdeaTopic @relation(fields: [ideaTopicId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([ideaTopicId])
}
